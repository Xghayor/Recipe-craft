<section>
  <h2>Add Ingredient</h2>
  <div class="add_new_ingredient">
    <%= form_with model: @recipe_food, url: recipe_recipe_foods_path(params[:recipe_id]), method: :post, local: true do |form| %>
      <div class="form-group">
        <%= form.label :food_id %>
        <%= form.select :food_id, current_user.foods.all.map { |food| [food.name, food.id] }, {}, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :quantity %>
        <%= form.number_field :quantity, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.submit "Add", class: "btn" %>
      </div>
    <% end %>
  </div>
</section>
