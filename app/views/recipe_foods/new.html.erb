<section class="add_new_ingredient">
  <h2 class='main-heading'>Add New Ingredient</h2>

  <%= form_with model: @recipe_food, url: recipe_recipe_foods_path(params[:recipe_id]), method: :post, local: true, class: "form_container" do |form| %>

    <div class="form_group">
      <%= form.label :food_id, class: "form_label" %>
      <%= form.select :food_id, current_user.foods.all.map { |food| [food.name, food.id] }, {}, class: "form_input" %>
    </div>

    <div class="form_group">
      <%= form.label :quantity, class: "form_label" %>
      <%= form.number_field :quantity, class: "form_input" %>
    </div>

    <%= form.submit "Add Ingredient", class: "btn" %>
  <% end %>

  <%= link_to "Back to #{Recipe.find(params[:recipe_id]).name}", recipe_path(params[:recipe_id]), class: "back-btn" %>
</section>
