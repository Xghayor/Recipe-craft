<section class="new_food">
  <h2 >Create a New Food</h2>

  <%= link_to 'Back to Foods', foods_path, class: 'btn' %>

  <article class="new_food_form">
    <%= form_with model: @food do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <div class="new_food_name">
          <%= form.text_field :name, class: "form_field" %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :measurement_unit %>
        <div class="food_prep_time">
          <%= form.text_field :measurement_unit, class: "form_field" %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :price %>
        <div class="price">
          <span>$</span>
          <%= form.number_field :price, class: "form_field", value: number_to_currency(form.object.price) %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :quantity %>
        <div class="quantity">
          <%= form.number_field :quantity, class: "form_field" %>
        </div>
      </div>

      <div class="form-group">
        <%= form.submit class: "btn" %>
      </div>
    <% end %>
  </article>
</section>